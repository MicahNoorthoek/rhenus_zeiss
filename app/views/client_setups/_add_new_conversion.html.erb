<style>
  .custom-modal-width {
    min-width: 75%; /* Set your desired width */
}

  .form-control {
      margin-bottom: 15px;
}
</style>
<div class="modal fade" id="newFedParts" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog custom-modal-width" role="document">
    <div class="modal-content" style="background-color: #fff;">
      <div class="modal-header editmdhd">
        <h5 class="modal-title" id="exampleModalLabel">New Conversions Data</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-4 justify-content-center">
            <%= form_for add_new_warehousedata_path do |f| %>

              <%= f.label :fromuom, "From UOM" %>
              <%= f.text_field :fromuom, class: "form-control", placeholder: "", autofocus: true %>

            </div>
            <div class="col-4 justify-content-center">
              <%= f.label :touom, "To UOM" %>
              <%= f.text_field :touom, class: "form-control", placeholder: "", autofocus: true%>

              </div>

              <div class="col-4 justify-content-center">
                <%= f.label :conversionfactor, "Conversion Factor" %>
                <%= f.text_field :conversionfactor, class: "form-control", placeholder: "", autofocus: true%>

                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-md-12 text-center">
                  <div class='position-centerish' style='height:50px;'>
                    <%= f.submit "Add New", class: 'btn btn btn-light btn-sm btn-new', style: "width: 50%;", id: "addnew" %>
                  </div>
                </div>
              </div>
            <% end %>

      </div>

          <div class="modal-footer editmdft">
          <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
    </div>
  </div>
</div>



<script>
  $(document).ready(function() {

    $("#addnew").on("click", function(e) {
      e.preventDefault();

      const formData = {
        fromuom: $("#_add_new_warehousedata_fromuom").val(),
        touom: $("#_add_new_warehousedata_touom").val(),
        conversionfactor: $("#_add_new_warehousedata_conversionfactor").val()
      };

      $.ajax({
        url: "/add_new_conversion", // Update with your controller's path
        method: "POST",
        data: formData,
        success: function () {
          location.reload()
        },
        error: function (xhr, status, error) {
          console.error(xhr.responseText);
        }
      });
    })
  })
</script>
