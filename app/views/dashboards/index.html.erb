<html lang="en">
  <style>
    thead tr th {
      font-size: 14px;
    }

  </style>
<body class="container-fluid" style="width:100vw !important;">
  <div class="content-squish-screens justify-content-center">

    <div class="card" style="min-width: 600px;">
     <div class="card-header" style="font-size: 15px;">
        Recon Status
      </div>
      <div class="card-body">
         <table class="table table-hover">
          <thead>
                  <tr>
                      <th>Count</th>
                      <th>Comments</th>
                      <th>Min of Part</th>
                      <th>Max of Part</th>
                      <th></th>
                  </tr>
              </thead>

              <tbody>
                 <% @reconciliation.each do |s| %>
                  <tr>
                      <td><%= s.count_of_part_number %></td>
                      <td><%= s.comments %></td>
                      <td><%= s.min_of_part_number %></td>
                      <td><%= s.max_of_part_number %></td>
                      <!--<td><button class="btn btn-search">List of parts</button></td>-->
                      <td><%= link_to 'Parts List', parts_details_path(comment: s.comments), class: "btn btn-outline-secondary btn-sm", style: "color: #000000;"%></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>

  
</body>
</html>
