<style>
  .accordion {
    padding-top: 50px;
  }


  .accordionDiv {
    display: flex;
    justify-content: center;
  }

  label {
    font-weight: 600;
  }

  #select-releasedate-error {
    color: #d9534f; 
    font-size: 13px;
    display: none;
    margin-top: 5px;
  }  

  .form-control {
  box-shadow: 0 !important;
  -webkit-box-shadow: 0 !important;
  -moz-box-shadow: 0 !important;
  -o-box-shadow: 0 !important;
  -ms-box-shadow: 0 !important;
}

