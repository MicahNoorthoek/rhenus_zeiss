<div class="warehousereceiptsuniqueidentifier content-squish-screens" style="box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); background-color: #ffff; padding: 20px; border-left: 3px solid #000000;">

  <h1 style="font-size: 30px; !important;">Warehouse Receipts</h1>

  <%= form_for warehouse_receipts_path, data: { turbo: false } do |f| %>
    <div class="row justify-content-center" style="text-align: center; margin-bottom:20px;">
      <div class="col-4">
        <div class="form-group">
          <%= f.label :spc, "SPC *" %>
          <%= f.text_field :spc, value: @receipts_params.try(:dig, "spc"), class: 'form-control', id: 'spc' %>
          <% if flash[:danger].to_s.include?('archived receipt already exists for entered SPC') %>
            <a><%= link_to "View Archive", warehouse_archive_path(archivedreceipts: { spc_or_clientpo_cont: @receipts_params.try(:dig, "spc") }) + '#outsidereceipt', style: "text-decoration: underline; color: blue;" %></a><br>
          <% end %>
          <br>
          <p id='select-spc-error' style='float:left; display:none; font-size: 13px; margin-top: -20px !important;'>*Required<p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :releasedate, "Release Date *" %>
          <%= f.date_field :releasedate, value: @receipts_params.try(:dig, "releasedate"), class: 'form-control', id: 'releasedate' %><br>
          <p id='select-releasedate-error' style='float:left; display:none; font-size: 13px; margin-top: -20px !important;'>*Required</p>
        </div>
      </div>

      <div class="col-3">
  <div class="form-group" style="padding-bottom: 20px;">
    <%= f.label :client, "Client", class: "position" %>
    <%= text_field_tag :client, @receipt_params.try(:dig, "client"), 
    class: "form-control mb-3", 
    id: "client_select_dropdown", 
    data: { clients: @client.collect(&:client).to_json.html_safe } %>

  </div>
</div>

      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :clientpo, "Client PO" %>
          <%= f.text_field :clientpo, value: @receipts_params.try(:dig, "clientpo"), class: 'form-control', id: 'clientpo' %><br>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :caja, "Caja" %>
          <%= f.text_field :caja, value: @receipts_params.try(:dig, "caja"), class: 'form-control', id: 'caja' %><br>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :sello, "Sello" %>
          <%= f.text_field :sello, value: @receipts_params.try(:dig, "sello"), class: 'form-control', id: 'sello' %><br>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :cartons30lb, "30LB Cartons" %>
          <%= f.number_field :cartons30lb, value: @receipts_params.try(:dig, "cartons30lb"), class: 'form-control', id: 'cartons30lb' %><br>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :cartons10lb, "10LB Cartons" %>
          <%= f.number_field :cartons10lb, value: @receipts_params.try(:dig, "cartons10lb"), class: 'form-control', id: 'cartons10lb' %><br>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :cartons5lb, "5LB Cartons" %>
          <%= f.number_field :cartons5lb, value: @receipts_params.try(:dig, "cartons5lb"), class: 'form-control', id: 'cartons5lb' %><br>
        </div>
      </div>
    </div>

    <!-- Add a div for the submit button -->
    <div class="row">
      <div class="col-md-12 text-center">
        <div class='position-centerish' style='height:50px;'>
          <%= f.submit 'Record Receipt', class: 'btn btn-sm btn-primary', style: "width:50%;" %>
        </div>
      </div>
    </div>

  <% end %>

</div>
<!-- END CARD BODY -->
<br><br>
<div class="content-squish-screens" style="background-color: #f4f4f4; padding: 20px;">
      <h2 style="border-bottom: 1px solid #000000; font-size: 24px;">
        Active
      </h2>
    
        <% if @receipts.any? %>
          <div class="table-responsive resptbl-class" style="overflow-x: visible !important;">
            <table id="ftztable" class="table table-striped table-sm table-hover display responsive no-wrap">
                <thead>
                  <tr>
                    <th>SPC</th>
                    <th>Release Date</th>
                    <th>Client</th>
                    <th>Client PO</th>
                    <th>Caja</th>
                    <th>Sello</th>
                    <th>Cartons 30LB</th>
                    <th>Cartons 10LB</th>
                    <th>Cartons 5LB</th>
                    <th colspan="1" style="text-align:center;">Actions</th>
                  </tr>
                </thead>
                <tbody id="myTable">
                  <% @receipts.each do |f| %>
                    <tr>
                      <td><%= f.spc %></td>
                      <td><%= f.releasedate %></td>
                      <td><%= f.client %></td>
                      <td><%= f.clientpo %></td>
                      <td><%= f.caja %></td>
                      <td><%= f.sello %></td>
                      <td><%= f.cartons30lb %></td>
                      <td><%= f.cartons10lb %></td>
                      <td><%= f.cartons5lb %></td>
                      <td colspan="1" style="text-align:center;">
                        <div class="btn-group dropend">
                          <button type="button" class="btn btn-light btn-sm btn-search dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Actions
                          </button>
                          <ul class="dropdown-menu" style="background: #fff; position: absolute; z-index: 1050;">
                            <div class="row justify-content-center" style="text-align: center;">
                              <div class="col-4 justify-content-center" style="text-align: center; margin-left: -20px;">
                                <%= link_to '<i class="fas fa-pencil-alt fa-md center" aria-hidden="true" style="float: none; padding-top: 20px !important;"></i>'.html_safe, update_receipts_path(spc: f.spc), method: :get, class: "icon-edit dropdown-item" %>
                              </div>
                              <div class="col-4 justify-content-center" style="text-align: center;">
                                <li><%= link_to '<i class="fas fa-trash-alt fa-md center" aria-hidden="true" style="float: none; color: #d50015;"></i>'.html_safe, verify_delete_path(caller: "warehouse_receipts", spc: f.spc), data: { turbo_frame: "delete_modal_frame" }, class: "icon-delete dropdown-item" %></li>
                              </div>
                            
                              <li><hr class="dropdown-divider"></li>
                              <% @result = SpcReceipt.where(spc: f.spc).where(warehouse: @userWarehouse).select("SUM(COALESCE(cartons30lb, 0) + COALESCE(cartons10lb, 0) + COALESCE(cartons5lb, 0)) AS total_sum").take %>
                              <% if @result.total_sum > 0 %>
                                <li><%= link_to 'Add Details', receipts_details_path(spc: f.spc), class: "dropdown-item" %></li>
                              <% else %>
                                <li><%= link_to 'Add Details', verify_delete_path(caller: "empty_headerqty", spc: f.spc), remote: true, class: "dropdown-item" %></li>
                              <% end %>
                              <!--<li><%#= link_to 'Positive Release', receipts_details_path(spc: f.spc), class: "dropdown-item" %></li>-->
                              <li><%= link_to 'Archive', archive_receipt_path(spc: f.spc), class: "dropdown-item", data: { turbo: false, confirm: "Archive this receipt?" } %></li>
                              </div>
                            </ul>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          </div>
          <div class="ftz_pagination">

            <%= will_paginate @receipts, :previous_label => 'prev', :next_label => 'next', param_name: 'receipts_page' %>

          </div>
      <% else %>
        <span style="font-style:italic;">No recorded receipts yet</span>
        <br>
      <% end %>
    </div>

