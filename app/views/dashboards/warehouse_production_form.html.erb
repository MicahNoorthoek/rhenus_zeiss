<style>
.border-settings {
  border-bottom: 1.5px solid black;
}

.position {
  float: left;
}

  .accordion {
    padding-top: 50px;
  }


  .accordionDiv {
    display: flex;
    justify-content: center;
  }

  label {
    font-weight: 600;
  }


</style>


<div class="warehouseproductionuniqueidentifier content-squish-screens" style="background-color: #f4f4f4; padding: 20px; border-left: 3px solid #000000;">

  <h1 style="font-size: 28px; !important;">Warehouse Productions</h1>

  <%= form_for warehouse_production_path do |f| %>
    <div class="row justify-content-center" style="text-align: center; padding-top: 20px;">
      
      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :production_identifier, "Production Identifier *", class: "position" %>
          <%= f.text_field :production_identifier, value: @prod_params.try(:dig, "production_identifier"), class: 'form-control', id: 'production_identifier' %>
          <% if flash[:danger].to_s.include?('archived production already exists with production identifier') %>
            <a><%= link_to "View Archive", warehouse_archive_path(archivedproduction: { production_identifier_cont: @prod_params.try(:dig, "production_identifier") }) + '#outsideproduction', style: "text-decoration: underline; color: blue;" %></a><br>
          <% end %>
          <br>
          <p id='select-production_identifier-error' style='float:left; display:none; font-size: 13px; margin-top: -20px !important;'>*Required<p>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :releasedate, "Date *", class: "position" %>
          <%= f.date_field :releasedate, value: @prod_params.try(:dig, "releasedate"), class: 'form-control', id: 'releasedate' %><br>
          <p id='select-releasedate-error' style='float:left; display:none; font-size: 13px; margin-top: -20px !important;'>*Required<p>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group" style="padding-bottom: 20px;">
          <%= f.label :process_type, "Process Type *", class: "position" %>
          <%= select_tag :process_type, options_for_select([@receipts_params.try(:dig, "process_type") || 'Select Process'] + @process.collect {|p| [p.process_type]}), { autofocus: true, class: "form-control mb-3", id: "processtype_select_dropdown", required: true } %><br>
          <p id='select-processtype-error' style='float:left; display:none; font-size: 13px; margin-top: -35px !important;'>*Required</p>
        </div> 
      </div>

    <!-- Add a div for the submit button -->
    <div class="row justify-content-center" style="text-align: center;">
      <div class="col-md-12 text-center">
        <div class='position-centerish' style='height:30px;'>
          <%= f.submit 'Record Production', class: 'btn btn-sm btn-primary', style: "width:50%;" %>
        </div>
      </div>
    </div>
    </div>
  <% end %>

</div>

<!-- END CARD BODY -->

<br><br>
<div class="content-squish-screens" style="background-color: #f4f4f4; padding: 20px;">
      <h2 style="border-bottom: 1px solid #000000; font-size: 24px;">
        Active
      </h2>
        <% if @prod.any? %>
          <div class="table-responsive resptbl-class" style="overflow-x: visible !important;">
          <table id="ftztable" class="table table-striped table-sm table-hover display responsive no-wrap">
          <thead>
            <tr>
              <th>Production Identifier</th>
              <th>Release Date</th>
              <th>Process Type</th>
              <th colspan="1" style="text-align:center;">Actions</th>
            </tr>
          </thead>
          <tbody id="myTable">
            <% @prod.each do |f| %>
              <tr>      
                <td><%= f.production_identifier %></td>
                <td><%= f.releasedate %></td>
                <td><%= f.process_type %></td>
                <td colspan="1" style="text-align:center;">
                <div class="btn-group dropend">
                    <button type="button" class="btn btn-light btn-sm btn-search dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                      Actions
                    </button>
                    <ul class="dropdown-menu" style="background: #fff">
                      <div class="row justify-content-center" style="text-align: center;">
                        <% if SpcReceiptsDetail.where(warehouse: @userWarehouse, production_identifier: f.production_identifier).count == 0 %>
                          <div class="col-4 justify-content-center" style="text-align: center; margin-left: -20px;">
                            <li><%= link_to '<i class="fas fa-pencil-alt fa-md center" aria-hidden="true" style="float: none;"></i>'.html_safe, update_production_path(production_identifier: f.production_identifier), method: :get, class: "icon-edit dropdown-item" %></li>
                          </div>
                          <div class="col-4 justify-content-center" style="text-align: center;">
                            <li><%= link_to '<i class="fas fa-trash-alt fa-md center" aria-hidden="true" style="float: none; color: #d50015;"></i>'.html_safe, verify_delete_path(caller: "warehouse_production", production_identifier: f.production_identifier), data: { turbo_frame: "delete_modal_frame" }, class: "icon-delete dropdown-item" %></li>
                          </div>
                        <% else %>
                          <div class="col-4 justify-content-center" style="text-align: center; margin-left: -20px;">
                            <li><%= link_to '<i class="fas fa-pencil-alt fa-md center" aria-hidden="true" style="float: none;"></i>'.html_safe, update_production_path(production_identifier: f.production_identifier), method: :get, class: "icon-edit dropdown-item" %></li>
                          </div>
                        <% end %>
                      
                        <li><hr class="dropdown-divider"></li>
                        <li><%= link_to 'View Details', productions_details_path(production_identifier: f.production_identifier), class: "dropdown-item" %></li>
                        <li><%= link_to 'Select Receipt', select_criteria_path(from: 'PROD', clientpoORprodid: f.production_identifier), data: { turbo_frame: "select_criteria_modal" }, class: "dropdown-item" %></li>                        
                        <li><%= link_to 'Archive', archive_production_path(production_identifier: f.production_identifier), class: "dropdown-item" %></li>                        
                      </div>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
      </table>
          </div>
          <div class="ftz_pagination">

            <%= will_paginate @prod, :previous_label => 'prev', :next_label => 'next', param_name: 'prod_page' %>

          </div>
      <% else %>
        <span style="font-style:italic;">No recorded production yet</span>
        <br>
      <% end %>
      </div>
    </div>
  </div>
</div>

</div>
