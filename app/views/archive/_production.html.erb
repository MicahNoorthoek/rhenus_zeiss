<body>

  <div class="container">
    <div class="lgtable">
      <h6 class = "pghead2">Archived Production</h6>

      <div class="row">
        <div class="col padding-adjust">
          <%= search_form_for @sp, as: :archivedproduction, url: warehouse_archive_path  do |f| %>
            <div class="row">
              <div class="col-7 padding-adjust">
                <div class="input-group">
                  <%= f.text_field :production_identifier_cont, class: "form-control input-sm", style: "font-size: 14px;", placeholder: "Search by production identifier..."%>
                <div class="input-group-btn">
                  <button class="btn btn-default" style="height:30px;" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
              </div>
              </div>
              <div class="col-3">
                <%= link_to "Clear Search", request.path, class:"cancel-button btn btn-light btn-sm btn-search" %>
              </div>
            </div> <!-- end second row -->
          <% end %>
        </div>
        <div class="col">
        </div>
      </div><!-- end row-->



      <div class="table-responsive resptbl-class">
        <table id="ftztable" class="table table-striped table-sm table-hover display responsive no-wrap errortbl">
          <thead class="thead-dark">
            <thead>
              <tr>
                <th style = 'min-width:50px; max-width:50px;'></th>
                <th>Production Identifier</th>
                <th>Release Date</th>
                <th>Warehouse</th>
                <th>Process Type</th>
                <th>Created Date</th>
                <th>Archived Date</th>
              </tr>
            </thead>
            <tbody id="myTable">
              <% @spc_prod.each do |f| %>
                <tr>
                  <td style = 'min-width:50px; max-width:50px;'><%= link_to '<i class="fa fa-info-circle fa-md center" style="padding-top: 13px;" title="Production details" aria-hidden="true"></i>'.html_safe, archived_production_details_path(production_identifier: f.production_identifier), data: { turbo_frame: "production_details_modal" }, class: "icon-info"%></td>

                  <td><%= f.production_identifier %></td>
                  <td><%= f.releasedate %></td>
                  <td><%= f.warehouse %></td>
                  <td><%= f.process_type %></td>
                  <td><%= f.recording_timestamp %></td>
                  <td><%= f.archived_date %></td> 
                </tr>

              <% end %>
            </tbody>
          </thead>
        </table>
      </div><!-- end table responsive -->
 <br>


 <div class="ftz_pagination">

     <%= will_paginate @spc_prod, previous_label: 'prev', next_label: 'next', param_name: 'prod_page' %>

   </div>


</div>
</div>




</body>


