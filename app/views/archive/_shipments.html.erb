<body>

  <div class="container">
    <div class="lgtable">
      <h6 class = "pghead2">Archived Shipments</h6>

      <div class="row">
        <div class="col padding-adjust">
          <%= search_form_for @ss, as: :archivedshipments, url: warehouse_archive_path  do |f| %>
            <div class="row">
              <div class="col-7 padding-adjust">
                <div class="input-group">
                  <%= f.text_field :clientpo_cont, class: "form-control input-sm", style: "font-size: 14px;", placeholder: "Search by clientpo..."%>
                <div class="input-group-btn">
                  <button class="btn btn-default" style="height:30px;" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
              </div>
              </div>
              <div class="col-3">
                <%= link_to "Clear Search", request.path, class:"cancel-button btn btn-light btn-sm btn-search" %>
              </div>
            </div> <!-- end second row -->
          <% end %>
        </div>
        <div class="col">
        </div>
      </div><!-- end row-->



      <div class="table-responsive resptbl-class">
        <table id="ftztable" class="table table-striped table-sm table-hover display responsive no-wrap errortbl">
          <thead class="thead-dark">
            <thead>
              <tr>
                <th style = 'min-width:50px; max-width:50px;'></th>
                <th>Client PO</th>
                <th>Client</th>
                <th>Release Date</th>

                <th>Cartons-30lb</th>
                <th>Cartons-10lb</th>
                <th>Cartons-05lb</th>
                <th>Warehouse</th>
                <th>Created Date</th>
                <th>Archived Date</th>
              </tr>
            </thead>
            <tbody id="myTable">
              <% @spc_ship.each do |f| %>
                <tr>
                  <td style = 'min-width:50px; max-width:50px;'><%= link_to '<i class="fa fa-info-circle fa-md center" style="padding-top: 13px;" title="Shipment details" aria-hidden="true"></i>'.html_safe, archived_shipment_details_path(clientpo: f.clientpo), data: { turbo_frame: "shipment_details_modal" }, class: "icon-info"%></td>
                  <td><%= f.clientpo %></td>
                  <td><%= f.client %></td>
                  <td><%= f.releasedate%></td>
                  <td><%= f.cartons30lb %></td>
                  <td><%= f.cartons10lb %></td>
                  <td><%= f.cartons5lb %></td>
                  <td><%= f.warehouse %></td>
                  <td><%= f.recording_timestamp %></td>
                  <td><%= f.archived_date %></td>
                </tr>

              <% end %>
            </tbody>
          </thead>
        </table>
      </div><!-- end table responsive -->
 <br>


 <div class="ftz_pagination">

     <%= will_paginate @spc_ship, previous_label: 'prev', next_label: 'next', param_name: 'ship_page' %>

   </div>


</div>
</div>




</body>


