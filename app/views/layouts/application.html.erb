<!DOCTYPE html>
<html>
  <head>
    <link rel="icon" type="image/x-icon" href="<%= asset_path('logo_colored.png') %>">
    <title>Zeiss Recon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/441565fa46.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', 'custom', 'dashboard', 'navigation', 'pdf', media: 'all', 'data-turbo-track': 'reload' %>
  


    <!-- jQuery must be loaded first -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

      <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" data-turbo-track="reload" />
      
      <!-- Select2 CSS -->
      <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

      <!-- Select2 JS (must come after jQuery) -->
      <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

      <!-- DataTables CSS -->
      <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

      <!-- DataTables JS -->
      <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>



    <!-- Rails Application JavaScript -->
    <%= javascript_importmap_tags %>
  </head>

  <body class ="<%=controller_name %> <%=action_name %>">
    <% if current_user %>
      <%= auto_session_timeout_js %>
    <% end %>

    <% unless %w[sessions passwords].include?(controller_name) %>
      <% unless current_page?(createuser_38923489d8234k234_path) %>
        <%= render 'layouts/navigation2' %>

      <% end %>
    <% end %>


    <div id="error-container">
      <%= render 'shared/flash' %>
    </div>

    <div style="margin-top: 20px;">
    <%= yield %>
    </div>

    <style>
      body {
        background-color: #f0f1ec !important;
      }
    </style>

    <div class="dynamic-modal"></div>
  </body>
</html>
