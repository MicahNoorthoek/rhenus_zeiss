<!DOCTYPE html>
<html>
  <head>

    <style>
     .searchform {
        width: 30%;
      }

     .form-control:focus {
        border-color: #979796;
        box-shadow: none;
        radius: 0;
      }

     .linktext{
        color: #404040;
        border: none;
        background-color: none;
      }
    </style>
  </head>
  <body>


      <div class="content-squish-screens">
        <h6 class = "pghead2" style="margin-bottom:40px;"><a style="color:#0061e0; font-style:italic;" href="<%= admin_path %>">Admin</a> / Warehouse Withdrawals</h6>

        <div class="row">
          <div class="col padding-adjust">
            <%= search_form_for @w, as: :withdrawals, url: all_withdrawals_view_path  do |f| %>
              <div class="row">
                <div class="col-7 padding-adjust">
                  <div class="input-group">
                    <%= f.text_field :withdrawalentrynumber_or_outboundreferencenumber_cont, class: "form-control input-sm", placeholder: "Search by Withdrawal Entry or Customer Order Number..."%>
                    <div class="input-group-btn">
                      <button class="btn btn-default" style="height:30px; background-color: #c7d785;" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                  </div>  
                </div>
                <div class="col-4">
                  <%= link_to "Clear Search", request.path, class:"cancel-button btn btn-light btn-sm btn-search" %>
                </div>
              </div> <!-- end second row -->
            <% end %>
          </div>
          <div class="col">
          </div>
        </div><!-- end row-->

        <div class="table-responsive resptbl-class">
          <table id="ftztable" class="table table-striped table-sm table-hover display responsive no-wrap">
            <thead class="thead-dark">
              <thead>
                <tr>
                  <th>Withdrawal Entry Number</th>
                  <th>Sales Reference Number</th>
                  <th>Status</th>
                  <th>Item Number</th>
                  <th>Sales Quantity</th>
                  <th>Sales Quantity Unassigned</th>
                  <th>Sales Date</th>
                  <th>Create Date</th>
                  <th>Warehouse</th>
                  <th>Container</th>
                  <th>Outbound Reference Number</th>
                  <th>UOM</th>
                </tr>
              </thead>
              <tbody id="myTable">
                <% @withdrawals.each do |f| %>
                  <tr>
                    <td><%= f.withdrawalentrynumber %></td>
                    <td><%= f.salesreferencenumber %></td>
                    <td><%= f.status %></td>
                    <td><%= f.itemnumber %></td>
                    <td><%= f.salesquantity %></td>
                    <td><%= f.salesquantityunassigned %></td>
                    <td><%= f.salesdate.strftime('%Y-%m-%d %H:%M:%S') %></td>
                    <td><%= f.createdate.strftime('%Y-%m-%d %H:%M:%S') %></td>
                    <td><%= f.warehouse %></td>
                    <td><%= f.container %></td>
                    <td><%= f.outboundreferencenumber %></td>
                    <td><%= f.uom %></td>
                  </tr>
                <% end %>
              </tbody>
            </thead>
          </table>
        </div>


        <div class="ftz_pagination">

          <%= will_paginate @withdrawals, :previous_label => 'prev', :next_label => 'next', param_name: 'withdrawals_page' %>

        </div>


      </div>

  </body>
</html>
