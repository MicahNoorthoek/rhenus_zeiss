                    </ul>

                  </div>
                </div>




              </div>

            </div>
            <!-- End table main table content -->
        </div>
      </div>

        <div class="modal-footer editmdft">

        <button type="button" class="btn btn-secondary" onComplete="$('#divId').modal('hide');$('body').removeClass('modal-open');$('.modal-backdrop').remove();"
        class="close" data-dismiss="modal">Close</button>

      </div>

    </div>
  </div>
